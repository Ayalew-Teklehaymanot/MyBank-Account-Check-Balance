    </http:listener-config>
    <apikit:config name="mybank-account-check-balance-config" api="resource::c711f3ad-7c9a-48fa-8816-7396a84bfc28:mybank-account-check-balance:1.0.0:raml:zip:mybank-account-check-balance.raml" outboundHeadersMapName="outboundHeaders" httpStatusVarName="httpStatus" />
