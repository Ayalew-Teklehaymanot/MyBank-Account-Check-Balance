	<configuration-properties doc:name="Configuration properties" doc:id="29be42af-0a3e-4e23-9be7-1fce412fdad4" file="config.yaml" />
	<flow name="mybank-account-check-balance-main">
        <http:listener config-ref="mybank-account-check-balance-httpListenerConfig" path="/api/*">
